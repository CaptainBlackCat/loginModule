<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Login_EditText_Icon_Style">
        <item name="android:layout_marginStart">@dimen/base_15</item>
        <item name="android:contentDescription">@string/base_contentDescription</item>
        <item name="android:layout_height">@dimen/base_25</item>
        <item name="android:layout_width">@dimen/base_25</item>
    </style>

    <style name="Login_EditText_Style">
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">@dimen/base_15</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="Login_EditText_Container_Style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/base_10</item>
        <item name="android:paddingBottom">@dimen/base_10</item>
        <item name="android:layout_marginStart">@dimen/base_15</item>
        <item name="android:layout_marginEnd">@dimen/base_15</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/base_rectangle_hollow_gray_bg</item>
    </style>

</resources>